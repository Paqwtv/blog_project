= form_for @coment do |f|
  - if @coment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@coment.errors.count, "error")} prohibited this coment from being saved:"
      %ul
        - @coment.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
