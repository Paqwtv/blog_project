%h1 Listing posts

%table
  %thead
    %tr
      %th Автор
      %th Content
      %th Name
      %th File
      %th
      %th
      %th

  %tbody
    - @posts.each do |post|
      %tr
        %td= post.author
        %td= link_to "#{post.name}", post
        %td= post.content
        %td= image_tag post.file_url (:thumb) if post.file?
        %td= link_to 'Edit', edit_post_path(post)
        %td= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'Новый пост', new_post_path

= will_paginate @posts